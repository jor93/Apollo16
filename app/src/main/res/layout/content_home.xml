<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="65dp"
    tools:context=".Home">

    <ScrollView
        android:id="@+id/newEvent_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Main Layout -->

        <LinearLayout
            android:id="@+id/newEvent_overview_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_textView_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/menu_home_next"
                android:singleLine="true"
                android:textSize="22dp"
                android:textColor="#000000" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/calendar_overview2_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/home_listView_Events"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>


